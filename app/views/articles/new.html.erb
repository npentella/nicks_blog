<h2>New Article</h2>
<% if @article.errors.any? %>
	<%= render partial: "errors", locals: {messages: @article.errors.full_messages} %>
<% end %>
<%= form_for @article do |f|  %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %><br>
	</p>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %><br>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>